<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
            <import type="android.view.View"/>
                <variable
                    name="actionData"
                    type="com.example.module_video.viewmodel.MediaViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/bottomInclude"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/theme_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/action_move"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/moveActionIcon"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_edit_remove_normal" />

            <TextView
                android:id="@+id/moveActionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="移动播放列表"
                android:textColor="@color/item_text"
                android:layout_marginBottom="5dp"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_delete"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/deleteActionIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_edit_delete_normal"
                />

            <TextView
                android:id="@+id/deleteActionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/item_text"
                android:text="删除"
                android:textSize="11sp" />

        </LinearLayout>


    </LinearLayout>
</layout>