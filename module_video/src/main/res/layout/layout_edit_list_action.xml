<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="actionListData"
            type="com.example.module_video.viewmode.MediaViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/listIncludeActionLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/theme_bg_color"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/deleteListActionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@mipmap/icon_edit_delete_normal" />

        <TextView
            android:id="@+id/deleteListActionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:text="删除"
            android:textColor="@color/item_text"
            android:textSize="11sp" />
    </LinearLayout>
</layout>